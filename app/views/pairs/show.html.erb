<aside class="callout">
  <div class="text-vertical-center">
    <h1>Upload your Images</h1>
  </div>
</aside>

<div class="form" style="margin: 100px 100px 0;">
<% if flash[:notice].present? %>
  <h4 class="text-primary"><%= flash[:notice] %></h4>
<% end %>
<% if flash[:alert].present? %>
  <h4 class="text-danger" style="color:red"><%= flash[:alert] %></h4>
<% end %>
<%= bootstrap_form_tag url: upload_pairs_path do |f| %>
  <%= f.text_field :text %>
  <%= f.file_field :image %>
  <%= f.submit 'Upload' %>
<% end %>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 text-center">
        <br>
        <hr class="small">
        <p class="text-muted">Copyright &copy; Your Website 2015</p>
      </div>
    </div>
  </div>
</footer>
